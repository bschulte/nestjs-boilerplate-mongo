{
  "name": "nestjs-boilerplate-mongo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node -r ./tsconfig-paths-bootstrap.js dist/main.js\"",
    "dev": "npm run start:dev",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk -r ./tsconfig-paths-bootstrap.js dist/main.js\"",
    "start:prod": "node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "console": "node -r ./tsconfig-paths-bootstrap.js dist/console.js",
    "console:dev": "ts-node -r tsconfig-paths/register src/console.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/graphql": "^6.5.1",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cls-hooked": "^4.3.0",
    "@types/dotenv": "^6.1.1",
    "@types/mongoose": "^5.5.17",
    "@types/prompts": "^2.0.1",
    "@types/uniqid": "^4.1.3",
    "@types/winston": "^2.4.4",
    "apollo-server-express": "^2.9.3",
    "bcryptjs": "^2.4.3",
    "chalk": "^2.4.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "cls-hooked": "^4.2.2",
    "commander": "^3.0.1",
    "dayjs": "^1.8.16",
    "dotenv": "^8.1.0",
    "graphql": "^14.5.6",
    "mongoose": "^5.7.1",
    "nestjs-console": "^1.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "prompts": "^2.2.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "source-map-support": "^0.5.13",
    "uniqid": "^5.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/passport-jwt": "^3.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.7",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
